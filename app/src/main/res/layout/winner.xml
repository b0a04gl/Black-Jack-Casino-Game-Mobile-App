<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout"
    android:layout_width="450dp"
    android:layout_height="475dp"
    android:layout_gravity="center"
    android:background="@mipmap/winner_tag"
    android:padding="5dp"
    tools:context=".Gameplay">

    <ImageView
        android:id="@+id/closeBtn"
        android:layout_width="48dp"
        android:layout_height="52dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="418dp"
        android:background="@drawable/buttonstyle"
        app:srcCompat="@color/orange" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="217dp"
        android:layout_height="94dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="107dp"
        android:layout_marginRight="107dp"
        android:layout_marginBottom="355dp"
        android:fontFamily="@font/cinderelapersonaluseregular"
        android:gravity="center"
        android:text="Winner"
        android:textColor="#d4af37"
        android:textSize="56sp" />

    <TextView
        android:id="@+id/won_player"
        android:layout_width="210dp"
        android:layout_height="52dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="117dp"
        android:layout_marginRight="117dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/blackjack"
        android:gravity="center"
        android:text="TextView"
        android:textColor="#d4af37"
        android:textSize="50sp" />

</RelativeLayout>